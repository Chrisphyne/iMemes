<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_end_color">

    <RelativeLayout
        android:id="@+id/screen_main"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/app"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="113dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/delaroy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:text="Memes Creator"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subDesc"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rasbita_subscribe"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="-41dp"
            android:text="Imemes Memes Creator provides a safe, fast and  easy to use platform to create you own memes. We offer this capability at a monthly subscription of $0.99. Click on the Subscribe button below to get your Monthly Subscription plan"
            android:textAlignment="center"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/rasbita_subscribe"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp"
            android:onClick="onSubscribeButtonClicked"
            android:src="@drawable/subscribe" />
    </RelativeLayout>

</RelativeLayout>